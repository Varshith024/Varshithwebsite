<!DOCTYPE html>
<html lang="en">
<head>
    <title>Array Sorting</title>
    <script>
        var arr = [121, 42, 12, 30, 54, 110, 61, 82];

        function sortArray() {
            for (var i = 0; i < arr.length - 1; i++) {
                for (var j = 0; j < arr.length - i - 1; j++) {
                    if (arr[j] > arr[j + 1]) {
                        var temp = arr[j];
                        arr[j] = arr[j + 1];
                        arr[j + 1] = temp;
                    }
                }
            }

            document.getElementById("p2").innerHTML = "Array After Sorting: " + arr.join(", ");
        }

        window.onload = function() {
            document.getElementById("p1").innerHTML = "Array: " + arr.join(", ");
        };
    </script>
</head>
<body>

    <h2>Array of Elements Sorting in Ascending Order</h2>

    <p id="p1"></p>

    <button type="button" onclick="sortArray()">Sort</button>

    <p id="p2"></p>

</body>
</html>
